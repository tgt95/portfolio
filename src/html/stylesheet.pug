		link(rel="stylesheet" type="text/css" href="assets/plugins/swiper/swiper-bundle.min.css")

		block page-css
		link(rel="stylesheet" type="text/css" href="assets/css/style.min.css")

	style.
		body{
			margin-top: calc(76px + var(--section-margin-mobile));
			background-color: var(--surface-2);
		}
		.section-showcase .btn:not(:last-child), .section-showcase .swatch:not(:last-child){
			margin-right: var(--space-xs-3);
		}
		.group-title{
			margin-bottom: var(--space-xs-2);
		}
		.section-showcase .item{
			margin-bottom: var(--space-sm);
		}
		.section-showcase .item:not(:first-child){
			margin-top: var(--space-sm);
		}
		.section-color .item:not(:last-child){
			margin-bottom: var(--space-xs);
		}
		.section-color .swatch{
			width: 100%;
			height: 40px;
			border-radius: 8px;
			border: 1px solid var(--border-light);
		}
		.section-typography .box{
			width: 100%;
			height: 100%;
			//- border-radius: 8px;
			//- border: 1px solid var(--border-light);
		}
	body
		// Header
		-
			let navigationMenu = {
				title: [
						//- 'Home', 
						'Profile',
						'Work', 
						'Resume'
					],
				url: [
					//- '.section-banner', 
					'.section-profile', 
					'.section-work', 
					'.section-contact'
					],
			}
			let socialIcon = ['linkedin-box', 'behance', 'dribbble', 'github']
		header.header.is-sticky
			.container
				.navigation-menu
					ul
						li.logo
							a.disable-function(href="index.html")
								img(src="assets/images/logo.svg", alt="TGT Logo")
						//- each item, index in navigationMenu.title
							li
								a(href=navigationMenu.url[index] data-offset-top="88")= navigationMenu.title[index]
					ul.social-list
						- let socialLink = ['https://www.linkedin.com/in/tgt95', 'https://www.behance.net/tgt95', 'https://dribbble.com/tgt95', 'https://github.com/tgt95']
						each icon, index in socialIcon
							li
								a(href=socialLink[index] target="_blank").btn.btn-just-icon.btn-outline
									i(class=`ri-${icon}-fill`)
						li.theme-switch-action
							label.theme-switch
								input.theme-switch__checkbox(type='checkbox' checked)#mode-toggle
								.theme-switch__container
									.theme-switch__clouds
									.theme-switch__stars-container
										include svg/theme-toggle.svg
									.theme-switch__circle-container
										.theme-switch__sun-moon-container
											.theme-switch__moon
												.theme-switch__spot
												.theme-switch__spot
												.theme-switch__spot
		
		section.section.has-divider
			.container
				.row.align-items-center
					.col-md-6.col-lg-12
						.section-heading
							.section-title Section title
						.content Lorem ip sum
		section.section.section-showcase.has-divider
			.container
				.row.align-items-center
					.col-md-6.col-lg-12
						.section-heading
							.section-title Buttons
						.content
							.h6 Main button
							.mb-3
								-
									let buttonTypes = ['primary', 'secondary', 'default', 'outline', 'ghost', 'ghost-brand']
								each item, index in buttonTypes
									a(href="javascript:void" class=`btn btn-${item}`)
										i.ri-shut-down-line
										= item
									| 
							.h6 Accent
							.mb-3
								-
									let accentTypes = ['info', 'success', 'warning', 'danger']
								each item, index in accentTypes
									a(href="javascript:void" class=`btn btn-${item}`)
										i.ri-shut-down-line
										= item
									| 
		section.section.section-showcase.has-divider
			.container
				.row.align-items-center
					.col-md-6.col-lg-12
						.section-heading
							.section-title Badge
						.content
							.h6 Default
							.mb-3
								each item, index in accentTypes
									span(class=`badge badge-${item}`)
										i.ri-shut-down-line
										= item
									| 
							.h6 Emphasize
							.mb-3
								each item, index in accentTypes
									span(class=`badge badge-${item} badge-emphasize`)
										i.ri-shut-down-line
										= item
									| 
							
		section.section.section-showcase.section-typography.has-divider
			.container
				.row.align-items-center
					.col-md-6.col-lg-12
						.section-heading
							.section-title Typography
						.section-content
							.item
								.group-title.h6 Heading
								.row.align-items-center
									- for (var i = 1; i <= 6; ++i) {
										.col-md-4.box
											div(class=`h${i}`)= `Heading ${i}`
									- }
							.divider
							.item
								.group-title.h6 Body
								.row.align-items-center
									-
										let bodyTexts = ['large', 'medium', 'small']
									each item in bodyTexts
										.col-md-4.box
											div(class=`text-${item}`)= `Body ${item}`
		section.section.section-showcase.section-color.has-divider
			.container
				.row.align-items-center
					.col-md-6.col-lg-12
						.section-heading
							.section-title Color
						.section-content
							-
								let colors = ['neutral', 'brand', 'blue', 'green', 'orange', 'red']
								let scale = [50, 100, 200, 300, 400, 500, 600, 700, 800, 900, 950]
							each color, colorIndex in colors
								.item
									.group-title.h6= color
									.d-flex
										each item, index in scale
											.swatch(style=`background-color: var(--${color}-${item});`)
											//- span <script>getComputedStyle(document.body).getPropertyValue(`--neutral-${item}`)</script>



