		meta(name='theme-color', content='#ea5d5d' media="(prefers-color-scheme: dark)")
		//- embed(src="[MR-Inst]-Surfaces-Good-Day.mp3" autostart="true" loop="true" hidden="true" id="#bg-music")

		block meta-title
		
		//- Default image when paste social link
		meta(property="og:image" content="assets/images/og-image.jpg")
		meta(property="og:title" content="Trình Gia Tuấn | Senior Product Designer | UX/UI | Resume")
