	//- Skills
	//- .section.section-skills
		.container
			.section-title.text-center Skills
			.row.align-items-center.skills-content
				-
					let skills = [
						{
							'title': 'UI Design',
							'icon': 'ui.svg'
						},
						{
							'title': 'UX Design',
							'icon': 'ux.svg'
						},
						{
							'title': 'Develop',
							'icon': 'develop.svg'
						},
					]

				each item, index in skills
					.col-md-4.col-sm-6.item
						.icon
							img(src!=`assets/images/icons/${item.icon}`)/
						.title= item.title

	//- Work
	.section.section-work
		.container
			.section-title Work
			.navigation-tabs
				ul
					-
						let categories = [
							{
								'title': 'Featured',
								'slug': 'featured'
							},
							{
								'title': 'Web design',
								'slug': 'web'
							},
							{
								'title': 'Mobile App',
								'slug': 'mobile'
							},
							{
								'title': 'Branding',
								'slug': 'branding'
							},
							{
								'title': 'Illustration',
								'slug': 'illustration'
							},
						]
					each item, index in categories
						- let className = index === 0 ? 'active' : ''
						li(class=className)
							a(href="#" data-tab-target=`#category-${item.slug}`)= item.title
		
		.swiper-container(id="category-featured")
			.swiper-wrapper.slide-wrapper
				.swiper-slide.item
					.item-thumbnail
						img(src="assets/images/projects/mobile/agoyu-app.jpg")
						a(href="https://www.notion.so/Agoyu-e6be289682ac43ebaf22cb9d9ffd2049" target="_blank").overlay-content.external
							.text-center
								i.icon.ri-external-link-line
								.text View case study
					//- .title Agoyu Moving
				.swiper-slide.item
					.item-thumbnail
						img(src="assets/images/projects/web/bds.jpg")
						a(href="https://swanky-sunflower-2b5.notion.site/BigIn-Design-System-c2a821fb51fa44b1a379e7504692fc98" target="_blank").overlay-content.external
							.text-center
								i.icon.ri-external-link-line
								.text Showcase
					//- .title BigIn Design System

		//- Mixins Grid details
		mixin galleryCard(item, index)
			.swiper-slide.item
				.item-thumbnail
					img(src=item.image)
					a(href=item.src data-size=`${getImageSize(item.image)[0]}x${getImageSize(item.image)[1]}` data-img-index=index).overlay-content
						i.icon.ri-zoom-in-line
				.title= item.title
				.url-link
					//- i.icon.ri-global-line
					a(href=item.website target="_blank" rel="nofollow")= item.website

		//- Fetch data from database
		each obj,k in database
			.swiper-container(id=`category-${k}` style="display: none;")
				.swiper-wrapper.slide-wrapper
					each item, index in database[`${k}`]
						+galleryCard(item, index)
				//- .swiper-pagination
				//- .swiper-button-prev
				//- .swiper-button-next
				//- .swiper-scrollbar

	//- Contact
	.section.section-contact.mb-0
		img(src="assets/images/shape/shape-wave-1.svg").shape-wave-1
		img(src="assets/images/shape/shape-wave-2.svg").shape-wave-2
		img(src="assets/images/shape/tree-1.svg").shape-tree-1
		img(src="assets/images/shape/tree-2.svg").shape-tree-2
		.container
			.row.align-items-center
				.col-md-7.col-lg-6.content-text(style="z-index: 999;")
					.title Interested in my work?
					div
						a(href="ux-ui-designer-trinh-gia-tuan.pdf" download).btn.btn-brand 
							i.ri-download-2-fill 
							|  Download Resume
						a(href="ux-ui-designer-trinh-gia-tuan.pdf" target="_blank").btn.btn-secondary.ml-2 
							i.ri-eye-line
							|  View Resume
				.col-md-5.col-lg-6.content-bg
					include svg/human-2.svg
	
	//- Photoswipe
	.pswp(tabindex="-1" role="dialog" aria-hidden="true")
		.pswp__bg
		.pswp__scroll-wrap
			.pswp__container
				.pswp__item
				.pswp__item
				.pswp__item
			.pswp__ui.pswp__ui--hidden
				.pswp__top-bar
					.pswp__counter
					button.pswp__button.pswp__button--close(title="Close (Esc)")
					button.pswp__button.pswp__button--share(title="Share")
					button.pswp__button.pswp__button--fs(title="Toggle fullscreen")
					button.pswp__button.pswp__button--zoom(title="Zoom in/out")
					.pswp__preloader
						.pswp__preloader__icn
							.pswp__preloader__cut
								.pswp__preloader__donut
				.pswp__share-modal.pswp__share-modal--hidden.pswp__single-tap
					.pswp__share-tooltip
				button.pswp__button.pswp__button--arrow--left(title="Previous (arrow left)")
				button.pswp__button.pswp__button--arrow--right(title="Next (arrow right)")
				.pswp__caption
					.pswp__caption__center


block script
	//-  Server side
	//-  Get Data Image (Not rendered)
	-
		for(var type in database) {
			database[type].forEach(function(item, i){
				//- Add new Property for JSON array
				item['w'] = getImageSize(item.src)[0];
				item['h'] = getImageSize(item.src)[1];
				//- Serve for identify which ID to open PSWP overlay
				item['pid'] = `${type}-${i}`;
			})
		}

	//- Client side
	script.
		// Loop Data from Database
		let web_data = 				[!{JSON.stringify(database.web)}],
			mobile_data = 			[!{JSON.stringify(database.mobile)}],
			branding_data = 		[!{JSON.stringify(database.branding)}],
			illustration_data = 	[!{JSON.stringify(database.illustration)}];

		// Window Onload
		document.addEventListener('DOMContentLoaded', (e)=> {
			theme.bannerCofig();
			theme.workGrid();
			theme.photoswipeInit('.section-work', '.swiper-container', '.item-thumbnail a.overlay-content:not(.external)');
		});

		// Window Resize
		window.addEventListener('resize', function(event) {
			theme.workGrid();
		}, true);