						.icon
							img(src!=`assets/images/icons/${item.icon}`)/
						.title= item.title

	//- Work
	section.section.section-work
		.container
			.section-title Work
			.navigation-tabs
				ul
					li.active
						a(href="#" data-tab-target="#category-featured") Featured
					//- li.active
					//- 	a(href="#" data-tab-target="#category-featured") 
					//- 		i.ri-star-smile-fill(style="color: var(--yellow)")
					//- 		|  Featured
					each obj, name in database
						//- - let activeClass = index === 0 ? 'active' : ''
						//- li(class=activeClass)
						li
							a(href="#" data-tab-target=`#category-${name}`)= database[`${name}`].fullName
				.switch-view
					a.btn-just-icon(href="#" action="grid").active
						i.ri-function-line
					a.btn-just-icon(href="#" action="list")
						i.ri-list-check-2


		//- Fetch data from database
		//- Featured
		.swiper-container(id="category-featured")
			.swiper-wrapper.slide-wrapper
				each obj, name in database
					each item, index in database[`${name}`].data
						-
							let isExternal = database[`${name}`].data[index].external
							let isFeatured = database[`${name}`].data[index].featured
						if ((typeof(isFeatured) === 'boolean') && isFeatured)
							if ((typeof(isExternal) === 'boolean') && isExternal)
								+galleryCard__External(item, index, `category-featured`)
							else
								+galleryCard__Internal(item, index, `category-featured`)
			//- .container
				.swiper-controls
					a(href="#").btn-just-icon.btn-brand.slide-button-prev
						i.ri-arrow-left-s-line
					a(href="#").btn-just-icon.btn-brand.slide-button-next
						i.ri-arrow-right-s-line
					.swiper-pagination
					//- .swiper-scrollbar

		//- Others project type
		each obj, name in database
			.swiper.swiper-container(id=`category-${name}` style="display: none;")
				.swiper-wrapper.slide-wrapper
					each item, index in database[`${name}`].data
						- let isExternal = database[`${name}`].data[index].external
						if ((typeof(isExternal) === 'boolean') && isExternal)
							+galleryCard__External(item, index, `category-${name}`)
						else
							+galleryCard__Internal(item, index, `category-${name}`)
				//- .container
				//- 	.swiper-controls
				//- 		a(href="#").btn-just-icon.btn-ghost.slide-button-prev
				//- 			i.ri-arrow-left-s-line
				//- 		a(href="#").btn-just-icon.btn-ghost.slide-button-next
				//- 			i.ri-arrow-right-s-line
				//- .swiper-pagination
				//- .swiper-scrollbar

	//- Contact
	section.section.section-contact.mb-0
		img(src="assets/images/shape/shape-wave-1.svg").shape-wave-1
		img(src="assets/images/shape/shape-wave-2.svg").shape-wave-2
		img(src="assets/images/shape/tree-1.svg").shape-tree-1
		img(src="assets/images/shape/tree-2.svg").shape-tree-2
		.container
			.row.align-items-center
				.col-md-7.col-lg-6.content-text
					.title#slow-scroll-demo-button Interested in my work?
					.actions
						a(href="ux-ui-designer-trinh-gia-tuan.pdf" download).btn.btn-brand 
							i.ri-download-2-fill 
							|  Download Resume
						a(href="ux-ui-designer-trinh-gia-tuan.pdf" target="_blank").btn.btn-secondary
							i.ri-eye-line
							|  View Resume
				.col-md-5.col-lg-6.content-bg
					include svg/human-2.svg
	
	//- Photoswipe
	.pswp(tabindex="-1" role="dialog" aria-hidden="true")
		.pswp__bg
		.pswp__scroll-wrap
			.pswp__container
				.pswp__item
				.pswp__item
				.pswp__item
			.pswp__ui.pswp__ui--hidden
				.pswp__top-bar
					.pswp__counter
					button.pswp__button.pswp__button--close(title="Close (Esc)")
					button.pswp__button.pswp__button--share(title="Share")
					button.pswp__button.pswp__button--fs(title="Toggle fullscreen")
					button.pswp__button.pswp__button--zoom(title="Zoom in/out")
					.pswp__preloader
						.pswp__preloader__icn
							.pswp__preloader__cut
								.pswp__preloader__donut
				.pswp__share-modal.pswp__share-modal--hidden.pswp__single-tap
					.pswp__share-tooltip
				button.pswp__button.pswp__button--arrow--left(title="Previous (arrow left)")
				button.pswp__button.pswp__button--arrow--right(title="Next (arrow right)")
				.pswp__caption
					.pswp__caption__center


block page-script
	script(src="assets/plugins/photoswipe/dist/photoswipe.min.js")
	script(src="assets/plugins/photoswipe/dist/photoswipe-ui-default.min.js")
	script(src="assets/plugins/swiper/swiper-bundle.min.js")

block script
	//-  Server side
	//-  Get Data Image (Not rendered)
	-
		for(var type in database) {
			database[type].data.forEach((item, i)=> {
				//- Add new Property for JSON array
				item['w'] = getImageSize(item.src)[0];
				item['h'] = getImageSize(item.src)[1];
				//- Serve for identify which ID to open PSWP overlay
				item['pid'] = `${type}-${i}`;
			})
		}
	//- Client side
	script.
		let theme = new Theme(),
			data = !{JSON.stringify(database)};

		console.log(data);

		// Window Onload
		document.addEventListener('DOMContentLoaded', e => {
			theme.init();
			theme.photoswipeInit('.section-work', '.swiper-container', '.item-thumbnail a.overlay-content:not(.external)', !{JSON.stringify(database)});

			// Waiting for loading end (Fix bug when have scrollbar appear)
			setTimeout(()=> theme.workGrid(), 1100);
		});

		// Window Resize
		window.addEventListener('resize', e => {
			!detectMobile.isMobile ? theme.workGrid() : 0;
		}, true);

